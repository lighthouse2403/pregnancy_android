<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green">

        <com.dangthuy.trolybabau.common.customview.ToolBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBar"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/toolBar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/background_corner_common"
            app:layout_constraintTop_toBottomOf="@id/divider"
            style="@style/TextViewStyle.Black"
            android:textAlignment="center"
            android:text="00:00:00"
            android:gravity="center"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play"
            app:layout_constraintTop_toTopOf="@id/tvTime"
            app:layout_constraintBottom_toBottomOf="@id/tvTime"
            app:layout_constraintStart_toStartOf="@id/tvTime"
            android:background="@drawable/rounded_corner_button"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"/>

        <View
            android:id="@+id/btnCount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/ivItem"
            app:layout_constraintBottom_toBottomOf="@id/tvNumber"
            app:layout_constraintStart_toStartOf="@id/ivItem"
            app:layout_constraintEnd_toEndOf="@id/ivItem"
            android:background="@drawable/circle_button"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/foot"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="0"
            android:paddingBottom="@dimen/_10sdp"
            style="@style/TextViewStyle.Black"
            android:textColor="@color/red"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            style="@style/TextViewStyle.Green"
            android:text="@string/tv_save"
            app:layout_constraintTop_toBottomOf="@id/tvNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
