<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/green">

        <com.dangthuy.trolybabau.common.customview.ToolBar
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBar"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/toolBar"
            app:layout_constraintBottom_toBottomOf="@id/toolBar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/ripple_react_background"
            android:src="@drawable/ic_star_love"
            android:layout_marginTop="@dimen/_24sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:id="@+id/divider"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/toolBar"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFindByName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/tv_tim_theo_ten"
            android:layout_marginStart="@dimen/_10sdp"
            style="@style/TextViewStyle.White"
            app:layout_constraintTop_toTopOf="@id/search"
            app:layout_constraintBottom_toBottomOf="@id/search"
            />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvFindByName"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:queryHint="@string/tv_tim_kiem_theo_ten"
            app:queryBackground="@null"
            android:background="@drawable/background_edittext_profile"
            app:iconifiedByDefault="false"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/tv_gioi_tinh_be"
            android:layout_marginStart="@dimen/_10sdp"
            style="@style/TextViewStyle.White"
            app:layout_constraintTop_toTopOf="@id/tabs"
            app:layout_constraintBottom_toBottomOf="@id/tabs"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintTop_toBottomOf="@id/search"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/tvGender"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintWidth_percent="0.5"
            android:background="@drawable/background_edittext_profile"
            app:tabIndicator="@drawable/background_tab"
            app:tabIndicatorColor="@color/green"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorGravity="stretch"
            android:padding="@dimen/_2sdp"
            app:tabMode="fixed"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBeginBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/tv_bat_dau_bang_chu"
            android:layout_marginStart="@dimen/_10sdp"
            style="@style/TextViewStyle.White"
            app:layout_constraintTop_toTopOf="@id/spinner"
            app:layout_constraintBottom_toBottomOf="@id/spinner"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:entries="@array/character"
            app:layout_constraintTop_toBottomOf="@id/tabs"
            app:layout_constraintStart_toEndOf="@id/tvBeginBy"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/spinner"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
