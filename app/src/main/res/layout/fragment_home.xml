<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/background_edittext"
            android:fontFamily="@font/roboto"
            android:text="Nguyen Ngoc Diep (Soc)"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="23dp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guildLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4"/>

        <View
            android:id="@+id/btnExpect"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/guildLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvAge"
            app:layout_constraintBottom_toBottomOf="@id/tvRemain"
            android:background="@drawable/ripple_react_background"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toEndOf="@id/guildLine"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUỔI THAI: 19 tuần 2 ngày"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            app:layout_constraintTop_toBottomOf="@id/tvAge"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/guildLine"
            android:layout_marginTop="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExpect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUỔI THAI: 19 tuần 2 ngày"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            app:layout_constraintTop_toBottomOf="@id/tvWeight"
            app:layout_constraintStart_toEndOf="@id/guildLine"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUỔI THAI: 19 tuần 2 ngày"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvExpect"
            app:layout_constraintStart_toEndOf="@id/guildLine"
            android:layout_marginTop="@dimen/_10sdp"/>

        <com.yangp.ypwaveview.YPWaveView
            android:id="@+id/progressbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:animatorEnable="true"
            app:textHidden="false"
            app:shapeType="heart"
            app:frontColor="@color/pink"
            app:behideColor="@color/pink_blur"
            app:borderWidthSize="1dp"
            app:borderColor="@color/pink_blur"
            app:textColor="#15DF89"
            app:max="100"
            app:progress="0"
            app:strong="70"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintBottom_toTopOf="@id/recyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guildLine"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvRemain"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
