<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/background_edittext"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:fontFamily="@font/roboto"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="23dp" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guildLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4"/>

        <View
            android:id="@+id/btnExpect"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/guildLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvAge"
            app:layout_constraintBottom_toBottomOf="@id/tvRemain"
            android:background="@drawable/ripple_react_background"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toEndOf="@id/guildLine"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            app:layout_constraintTop_toBottomOf="@id/tvAge"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/guildLine"
            android:layout_marginTop="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExpect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            app:layout_constraintTop_toBottomOf="@id/tvWeight"
            app:layout_constraintStart_toEndOf="@id/guildLine"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvExpect"
            app:layout_constraintStart_toEndOf="@id/guildLine"
            android:layout_marginTop="@dimen/_10sdp"/>

        <com.yangp.ypwaveview.YPWaveView
            android:id="@+id/progressbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:animatorEnable="true"
            app:behideColor="@color/pink"
            app:borderColor="@color/pink"
            app:borderWidthSize="2dp"
            app:frontColor="@color/pink"
            app:layout_constraintBottom_toTopOf="@id/tvBornNotice"
            app:layout_constraintEnd_toStartOf="@id/guildLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:max="100"
            app:progress="0"
            app:shapeType="heart"
            app:strong="70"
            app:textColor="@color/white"
            app:textHidden="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBornNotice"
            app:layout_constraintTop_toBottomOf="@id/progressbar"
            app:layout_constraintBottom_toTopOf="@id/recyclerView"
            app:layout_constraintStart_toStartOf="@id/progressbar"
            app:layout_constraintEnd_toEndOf="@id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewStyle.Black"
            android:textColor="@color/red"
            android:text="@string/tv_be_yeu_da_du_thang"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="5.00dp"
            android:layout_marginRight="5.00dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRemain"
            tools:layout_editor_absoluteX="20dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
