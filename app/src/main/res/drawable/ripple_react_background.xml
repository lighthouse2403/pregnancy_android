    <item
        android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_background" />
        </shape>
    </item>
    <item
        android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" />
        </shape>
    </item>
</ripple>
